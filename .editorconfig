root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.java]
indent_size = 4
indent_style = space

[*.{js,ts,json,scss,css,html}]
indent_size = 2
indent_style = space

[*.{xml,ftl}]
indent_size = 2
indent_style = space








